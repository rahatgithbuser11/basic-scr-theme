<div class="card">
	<img
		src="{{ product.featured_media | image_url: width: 250 }}"
		width="auto"
		height="auto"
		class="card-img-top"
		alt="{{ product.title }}"
	>
	<div class="card-body">
		<div class="card-badge">
			{% if product.available == false %}
				<span class="badge rounded-pill text-bg-danger">sold</span>
			{% elsif product.compare_at_price > product.price and product.available %}
				<span class="badge rounded-pill text-bg-success">sale</span>
			{% endif %}
		</div>
		<h5 class="card-title">{{ product.title }}</h5>
		<div class="price">
			<s>
				<span class="sale-price">{{ product.compare_at_price | money }}</span>
			</s>
			<span class="sale-regular">{{ product.price | money }}</span>
		</div>
		<a href="{{ product.url }}" class="btn btn-primary">See product</a>
	</div>
</div>
