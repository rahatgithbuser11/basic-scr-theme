{% doc %}
  @prompt
    A heading with an animated glowing effect

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glow-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin: {{ block.settings.margin_top }}px 0 {{ block.settings.margin_bottom }}px 0;
    padding: 20px;
  }

  .ai-glow-heading-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    margin: 0;
    position: relative;
    display: inline-block;
    text-shadow: 
      0 0 5px {{ block.settings.glow_color }},
      0 0 10px {{ block.settings.glow_color }},
      0 0 15px {{ block.settings.glow_color }},
      0 0 20px {{ block.settings.glow_color }};
    animation: ai-glow-pulse-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-in-out infinite alternate;
  }

  @keyframes ai-glow-pulse-{{ ai_gen_id }} {
    from {
      text-shadow: 
        0 0 5px {{ block.settings.glow_color }},
        0 0 10px {{ block.settings.glow_color }},
        0 0 15px {{ block.settings.glow_color }},
        0 0 20px {{ block.settings.glow_color }};
    }
    to {
      text-shadow: 
        0 0 10px {{ block.settings.glow_color }},
        0 0 20px {{ block.settings.glow_color }},
        0 0 30px {{ block.settings.glow_color }},
        0 0 40px {{ block.settings.glow_color }},
        0 0 50px {{ block.settings.glow_color }};
    }
  }

  {% if block.settings.pause_on_hover %}
    .ai-glow-heading-text-{{ ai_gen_id }}:hover {
      animation-play-state: paused;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-glow-heading-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-glow-heading-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading_tag == 'h1' %}
    <h1 class="ai-glow-heading-text-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h1>
  {% elsif block.settings.heading_tag == 'h2' %}
    <h2 class="ai-glow-heading-text-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h2>
  {% elsif block.settings.heading_tag == 'h3' %}
    <h3 class="ai-glow-heading-text-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h3>
  {% elsif block.settings.heading_tag == 'h4' %}
    <h4 class="ai-glow-heading-text-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h4>
  {% elsif block.settings.heading_tag == 'h5' %}
    <h5 class="ai-glow-heading-text-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h5>
  {% else %}
    <h6 class="ai-glow-heading-text-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h6>
  {% endif %}
</div>

