{% doc %}
  @prompt
    marquee section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-marquee-container-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.vertical_padding }}px 0;
    position: relative;
  }

  .ai-marquee-track-{{ ai_gen_id }} {
    display: flex;
    white-space: nowrap;
    animation: ai-marquee-scroll-{{ ai_gen_id }} {{ block.settings.animation_speed }}s linear infinite;
  }

  .ai-marquee-content-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
    padding-right: {{ block.settings.item_spacing }}px;
  }

  .ai-marquee-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
  }

  .ai-marquee-separator-{{ ai_gen_id }} {
    color: {{ block.settings.separator_color }};
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
  }

  @keyframes ai-marquee-scroll-{{ ai_gen_id }} {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .ai-marquee-container-{{ ai_gen_id }}:hover .ai-marquee-track-{{ ai_gen_id }} {
    animation-play-state: {{ block.settings.pause_on_hover | default: false | ternary: 'paused', 'running' }};
  }

  @media screen and (max-width: 749px) {
    .ai-marquee-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
    
    .ai-marquee-separator-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-marquee-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-marquee-track-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      <div class="ai-marquee-content-{{ ai_gen_id }}">
        {% if block.settings.marquee_text_1 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.marquee_text_1 }}</span>
          {% if block.settings.separator != blank %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}
        
        {% if block.settings.marquee_text_2 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.marquee_text_2 }}</span>
          {% if block.settings.separator != blank %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}
        
        {% if block.settings.marquee_text_3 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.marquee_text_3 }}</span>
          {% if block.settings.separator != blank %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}
        
        {% if block.settings.marquee_text_4 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.marquee_text_4 }}</span>
          {% if block.settings.separator != blank %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}
        
        {% if block.settings.marquee_text_5 != blank %}
          <span class="ai-marquee-text-{{ ai_gen_id }}">{{ block.settings.marquee_text_5 }}</span>
          {% if block.settings.separator != blank %}
            <span class="ai-marquee-separator-{{ ai_gen_id }}">{{ block.settings.separator }}</span>
          {% endif %}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

